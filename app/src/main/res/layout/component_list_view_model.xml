<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:background="@drawable/grid_image_backgrnd">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/cardViewImageGrid"
        android:thicknessRatio="20.9"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:shape="ring"
        android:elevation="8dp"
        card_view:cardCornerRadius="25dp"
        android:innerRadius="0dp"
        tools:ignore="UnusedAttribute">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/hanuman"
            android:requiresFadingEdge="vertical"
            android:drawingCacheQuality="low"
            android:scaleType="fitXY"
            android:id="@+id/imageViewPosition"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hanuman God"
            android:background="@drawable/text_view_shap_gird"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:padding="10dp"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:id="@+id/textViewPosition"
            android:layout_below="@+id/cardViewImageGrid"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:ignore="HardcodedText,SpUsage" />

    </android.support.v7.widget.CardView>
    </RelativeLayout>